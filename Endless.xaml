<Window x:Class="Flappy_Bird.Endless"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flappy_Bird"
        mc:Ignorable="d"
        Title="Endless" Height="490" Width="525" 
        WindowStartupLocation="CenterScreen" MaxWidth="525" MaxHeight="490" MinWidth="525" MinHeight="490" WindowStyle="None" Cursor="ScrollNE">


    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="endless.png"/>
        </Canvas.Background>

        <Image x:Name="playClassic"  Source="buttonPlay.png" Width="160" HorizontalAlignment="Center" Canvas.Left="311" Canvas.Top="256" MouseLeftButtonUp="playClassic_MouseLeftButtonUp"/>
        <Image x:Name="playCountry"  Source="buttonPlay.png" Width="160" HorizontalAlignment="Center" Canvas.Left="50" Canvas.Top="256" MouseLeftButtonUp="playCountry_MouseLeftButtonUp"/>


        <Image Source="menuButton.png" Width="135" Canvas.Top="420" Canvas.Left="195" MouseLeftButtonUp="Image_MouseLeftButtonUp"></Image>

    </Canvas>
</Window>
